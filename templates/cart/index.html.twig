{% extends 'base.html.twig' %}


{% block title %}Votre panier!
{% endblock %}

{% block body %}
<div class="bg-light p-3">
    <h1>Votre panier</h1>
</div>
{% if items|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>titre</th>
            <th>prix</th>
            <th>quantit√©</th>
            <th>total</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}


        <tr>
            <td scope="row">{{item.product.title}}</td>
            <td>{{item.product.price}}</td>
            <td>{{item.quantity}}</td>
            <td>
                <a  href="{{path('cart_remove',{'id':item.product.id})}}" class="btn btn-danger btn-sm">
<i class="fa fa-trash" aria-hidden="true"></i></i>
                    
                </a>

            </td>
        </tr>
        {% endfor %}

    </tbody>
    {% else %}


    <p>Surprise, c'est vide !</p>
    {% endif %}
    {% endblock %}